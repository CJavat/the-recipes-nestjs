generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

enum CategoryName {
  desayuno
  comida
  cena
  horno
  mexicana
  pan
  postres
  pastas
  hamburguesas
  pizza
  sopas
  bebes
  ensaladas
  otro
}

model User {
  id            String  @id @default(uuid())
  firstName     String
  lastName      String
  email         String  @unique
  emailVerified Boolean
  password      String
  role          Role    @default(user)
  image         String?

  myrecipes       Recipe[]
  favoriteRecipes FavoriteRecipe[]
}

model Category {
  id      String       @id @default(uuid())
  name    CategoryName @unique()
  recipes Recipe[]
}

model Recipe {
  id              String              @id @default(uuid())
  name            String
  description     String
  instructions    String
  ingredients     RecipeIngredients[]
  images          RecipeImage[]
  favoriteRecipes FavoriteRecipe[]

  // Relaciones
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@index([categoryId])
}

model RecipeImage {
  id  String @id @default(uuid())
  uri String

  // Relaciones
  recipe   Recipe @relation(fields: [recipeId], references: [id])
  recipeId String
}

model RecipeIngredients {
  id       String @id @default(uuid())
  name     String
  quantity String

  recipe   Recipe @relation(fields: [recipeId], references: [id])
  recipeId String
}

model FavoriteRecipe {
  id String @id @default(uuid())

  // Relaciones
  user   User   @relation(fields: [userId], references: [id])
  userId String

  recipe   Recipe @relation(fields: [recipeId], references: [id])
  recipeId String
}
